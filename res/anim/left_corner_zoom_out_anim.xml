<?xml version="1.0" encoding="utf-8"?>
<!-- android:duration="@android:integer/config_mediumAnimTime" -->
<set xmlns:android="http://schemas.android.com/apk/res/android"
	android:shareInterpolator="false">
	<!--从左上角到右下角进行缩小效果-->
	<translate android:fromXDelta="0" android:toXDelta="0"
		android:fromYDelta="0" android:toYDelta="0" android:duration="1000" />
	<scale android:interpolator="@android:res/anim/accelerate_decelerate_interpolator"
		android:fromXScale="1.0" android:toXScale="0.0" android:fromYScale="1.0"
		android:toYScale="0.0" android:pivotX="100%" android:pivotY="100%"
		android:duration="1000" android:repeatCount="0" android:startOffset="0"></scale>
	
</set>
