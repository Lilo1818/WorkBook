<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item  android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />

            <stroke android:width="1dp" android:color="@color/lightgray" />

            <gradient android:endColor="@color/lightgray" android:startColor="@color/lightgray" />
			<padding
		        android:bottom="0dp"
		        android:left="0dp"
		        android:right="0dp"
		        android:top="0dp" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item  android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />

            <stroke android:width="1dp" android:color="@color/lightgray" />

            <gradient android:endColor="@color/lightgray" android:startColor="@color/lightgray" />
			<padding
		        android:bottom="0dp"
		        android:left="0dp"
		        android:right="0dp"
		        android:top="0dp" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />

            <stroke android:width="1dp" android:color="@color/white" />

            <gradient android:endColor="#ffffff" android:startColor="#ffffff" />
			<padding
		        android:bottom="0dp"
		        android:left="0dp"
		        android:right="0dp"
		        android:top="0dp" />
            <corners android:radius="5dp" />
        </shape></item>

</selector>