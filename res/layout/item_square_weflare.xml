<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:descendantFocusability="blocksDescendants" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp" >

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/default_img"
            android:scaleType="fitXY" />
        
        
         <LinearLayout android:id="@+id/ll_days_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/square_welfare_hongqi"
            android:orientation="horizontal"
            android:gravity="center"
             >
            
             <TextView
                android:id="@+id/tv_days_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="剩余\n12天"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="20dp" />
             
       </LinearLayout>
        

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/square_welfare_title_bg"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="素色长袖衫"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:singleLine="true" />

            <ImageButton
                android:id="@+id/ib_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/square_welfare_canyu"
                android:background="@null"
                android:paddingLeft="6dp"
                android:focusable="false" />
            
        </LinearLayout>
        
    </RelativeLayout>

</LinearLayout>