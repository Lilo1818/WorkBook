<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_update_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置第一个角标为7" />
    
    <Button
        android:id="@+id/btn_update_badge1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置当前角标为3" />
    
    <Button
        android:id="@+id/btn_update_badge2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更新角标：第一个角标增加5" />
    
    <Button
        android:id="@+id/btn_update_badge3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更新角标：第一个角标减3" />

</LinearLayout>
