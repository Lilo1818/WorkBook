<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >


    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dp10" >
    <include 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            layout="@layout/zhibo_item_content"
            android:visibility="gone" />
    <include 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            layout="@layout/zhibo_item_pic"
            android:visibility="gone" />
    
    <include 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            layout="@layout/zhibo_item_video"
            android:visibility="gone" />
    
    <include 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            layout="@layout/zhibo_item_audio"
            android:visibility="gone" />
    
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/square_found_time"
            android:drawablePadding="4dp"
            android:text="99"
            android:textColor="@color/color_gray_02"
            android:textSize="12sp" />
        
        <View android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        
        
        <Button
            android:id="@+id/btn_delete"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/delete_chat_selector"
            android:textColor="@color/color_gray_02"
            android:textSize="12sp"
            android:layout_marginRight="20dp" />
        
        
        <TextView
            android:id="@+id/tv_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/reply_icon"
            android:drawablePadding="4dp"
            android:text="99"
            android:textColor="@color/color_gray_02"
            android:textSize="14sp" />

        

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/zhibo_zan_default"
            android:drawablePadding="4dp"
            android:paddingLeft="10dp"
            android:text="0"
            android:textColor="@color/color_gray_02"
            android:textSize="14sp"
            android:gravity="center_vertical" />
    </LinearLayout>
    <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_gray_02"/>
  

</LinearLayout>