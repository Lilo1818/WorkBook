<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/olive"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/olive"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/personal_layout_style"
            android:visibility="gone" >

            <RelativeLayout
                android:id="@+id/layout_clear"
                style="@style/personal_item_layout" >

                <ImageView
                    android:id="@+id/image"
                    style="@style/personal_image_left"
                    android:background="@drawable/setting_clear" />

                <TextView
                    style="@style/personal_text_left"
                    android:layout_toRightOf="@id/image"
                    android:text="@string/setting_clear" />

                <ImageView style="@style/personal_arrow_right" />
            </RelativeLayout>

            <View style="@style/gray_view_line" />

            <RelativeLayout
                android:id="@+id/layout_push"
                style="@style/personal_item_layout" >

                <ImageView
                    android:id="@+id/image"
                    style="@style/personal_image_left"
                    android:background="@drawable/setting_push" />

                <TextView
                    style="@style/personal_text_left"
                    android:layout_toRightOf="@id/image"
                    android:text="@string/setting_push" />

                <ImageView style="@style/personal_arrow_right" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout style="@style/personal_layout_style" >

            <RelativeLayout
                android:id="@+id/layout_help"
                style="@style/personal_item_layout" >

                <ImageView
                    android:id="@+id/image"
                    style="@style/personal_image_left"
                    android:background="@drawable/setting_help" />

                <TextView
                    style="@style/personal_text_left"
                    android:layout_toRightOf="@id/image"
                    android:text="@string/setting_help" />

                <ImageView style="@style/personal_arrow_right" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout style="@style/personal_layout_style" >

            <RelativeLayout
                android:id="@+id/layout_comment"
                style="@style/personal_item_layout"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/image"
                    style="@style/personal_image_left"
                    android:background="@drawable/setting_comment" />

                <TextView
                    style="@style/personal_text_left"
                    android:layout_toRightOf="@id/image"
                    android:text="@string/setting_comment" />

                <ImageView style="@style/personal_arrow_right" />
            </RelativeLayout>

            <View style="@style/gray_view_line" />

            <RelativeLayout
                android:id="@+id/layout_tucao"
                style="@style/personal_item_layout" >

                <ImageView
                    android:id="@+id/image"
                    style="@style/personal_image_left"
                    android:background="@drawable/setting_tucao" />

                <TextView
                    style="@style/personal_text_left"
                    android:layout_toRightOf="@id/image"
                    android:text="@string/setting_tucao" />

                <ImageView style="@style/personal_arrow_right" />
            </RelativeLayout>

            <View style="@style/gray_view_line" />

            <RelativeLayout
                android:id="@+id/layout_about"
                style="@style/personal_item_layout" >

                <ImageView
                    android:id="@+id/image"
                    style="@style/personal_image_left"
                    android:background="@drawable/setting_push" />

                <TextView
                    style="@style/personal_text_left"
                    android:layout_toRightOf="@id/image"
                    android:text="@string/setting_about" />

                <ImageView style="@style/personal_arrow_right" />
            </RelativeLayout>
        </LinearLayout>
        
        <RelativeLayout
            android:id="@+id/layout_version" 
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            >
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_bg"
                android:layout_alignParentTop="true"
                />
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检查版本更新"
                android:layout_centerVertical="true"
                android:layout_marginLeft="45dp"
                android:textColor="#333333"
                />
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_bg"
                android:layout_alignParentBottom="true"
                />
            
        </RelativeLayout>
    </LinearLayout>
	
    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:text="当前版本为：3.0.2"
        android:textColor="#b4b4b4"
        android:textSize="15sp" />

</RelativeLayout>