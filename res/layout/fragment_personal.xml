<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/olive"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout style="@style/personal_layout_style" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp" >

                <com.mci.firstidol.view.RoundedImageView
                    android:id="@+id/icon_mine"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/alert_bg"
                    app:corner_radius="90dp" />

                <TextView
                    android:id="@+id/text_integration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/personal_integration"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="12dp"
                    android:textColor="@color/color_main"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/text_integration"
                    android:layout_toRightOf="@id/icon_mine"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/text_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/text_lower_black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:textColor="@color/text_color_login_gray"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/image_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_content" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:weightSum="3" >

                <LinearLayout
                    android:id="@+id/layout_dynamic"
                     style="@style/personal_layout_info_text" >

                    <TextView
                        android:id="@+id/text_dynamic"
                        style="@style/personal_info_text" />

                    <TextView
                        style="@style/personal_info_text"
                        android:text="@string/dynamic" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_follow" 
                    style="@style/personal_layout_info_text" >

                    <TextView
                        android:id="@+id/text_follow"
                        style="@style/personal_info_text" />

                    <TextView
                        style="@style/personal_info_text"
                        android:text="@string/follow" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_follower"
                     style="@style/personal_layout_info_text" >

                    <TextView
                        android:id="@+id/text_follower"
                        style="@style/personal_info_text" />

                    <TextView
                        style="@style/personal_info_text"
                        android:text="@string/follower" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/color_bg" />

            <RelativeLayout
                android:id="@+id/layout_star"
                style="@style/personal_item_layout" >

                <ImageView
                    android:id="@+id/image"
                    style="@style/personal_image_left"
                    android:background="@drawable/personal_star" />

                <TextView
                    style="@style/personal_text_left"
                    android:layout_toRightOf="@id/image"
                    android:text="@string/star" />

                <ImageView style="@style/personal_arrow_right" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout style="@style/personal_layout_style" >

            <RelativeLayout
                android:id="@+id/layout_collection"
                style="@style/personal_item_layout" >

                <ImageView
                    android:id="@+id/image"
                    style="@style/personal_image_left"
                    android:background="@drawable/personal_collection" />

                <TextView
                    style="@style/personal_text_left"
                    android:layout_toRightOf="@id/image"
                    android:text="@string/collection" />

                <ImageView style="@style/personal_arrow_right" />
            </RelativeLayout>

            <View style="@style/gray_view_line" />

            <RelativeLayout
                android:id="@+id/layout_comment"
                style="@style/personal_item_layout" >

                <ImageView
                    android:id="@+id/image"
                    style="@style/personal_image_left"
                    android:background="@drawable/personal_comment" />

                <TextView
                    style="@style/personal_text_left"
                    android:layout_toRightOf="@id/image"
                    android:text="@string/comment" />

                <ImageView style="@style/personal_arrow_right" />
            </RelativeLayout>

            <View style="@style/gray_view_line" />

            <RelativeLayout
                android:id="@+id/layout_notice"
                style="@style/personal_item_layout" >

                <ImageView
                    android:id="@+id/image"
                    style="@style/personal_image_left"
                    android:background="@drawable/personal_notice" />

                <TextView
                    style="@style/personal_text_left"
                    android:layout_toRightOf="@id/image"
                    android:text="@string/notice" />

                <ImageView style="@style/personal_arrow_right" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout style="@style/personal_layout_style" >

            <RelativeLayout
                android:id="@+id/layout_setting"
                style="@style/personal_item_layout" >

                <ImageView
                    android:id="@+id/image"
                    style="@style/personal_image_left"
                    android:background="@drawable/personal_setting" />

                <TextView
                    style="@style/personal_text_left"
                    android:layout_toRightOf="@id/image"
                    android:text="@string/setting" />

                <ImageView style="@style/personal_arrow_right" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_logout" />
        </RelativeLayout>
    </LinearLayout>
    
    <RelativeLayout 
        android:id="@+id/layout_nodata"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        
        <ImageView 
            android:id="@+id/btn_login"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/no_login"
            android:layout_centerInParent="true"/>
        
    </RelativeLayout>

</LinearLayout>