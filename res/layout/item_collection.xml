<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical"
    android:background="@color/white">
    
    <com.mci.firstidol.view.RoundedImageView
        android:id="@+id/icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:scaleType="center"
        app:corner_radius="50dp"/>
    
    <ImageView 
        android:id="@+id/image_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"/>
    
    <RelativeLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_toRightOf="@id/icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toLeftOf="@id/image_back">
        
        <TextView 
            android:id="@+id/text_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:maxLines="2"
            android:textSize="14sp"
            android:textColor="@color/text_lower_black"/>
        
        <ImageView 
            android:id="@+id/image_see"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@id/text_name"
            android:layout_marginTop="5dp"
            android:background="@drawable/star_red"/>
        
        <TextView 
            android:id="@+id/text_seeCount"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/image_see"
            android:layout_below="@id/text_name"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"/>
        
        <ImageView 
            android:id="@+id/image_zan"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@id/text_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/text_seeCount"
            android:background="@drawable/star_introduce"/>
        
        <TextView 
            android:id="@+id/text_zanCount"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/image_zan"
            android:layout_below="@id/text_name"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"/>
        
    </RelativeLayout>

     <View 
        android:layout_height="2px"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/color_bg"/>
    
</RelativeLayout>
